<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.storyvendingmachine.www.movienote.RegisterActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MovieNote"
        android:textSize="36dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="25dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/r_userEmailTextbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColorHint="@color/colorHint"
        android:hint="이메일 주소를 입력해주세요"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:background="@color/colorWhite"
        android:padding="5dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        />

    <TextView
        android:id="@+id/r_emailcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="이메일을 주소를 입력해주세요"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/r_userPasswordTextbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorWhite"
        android:hint="비밀번호를 입력해주세요"
        android:inputType="textPassword"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColorHint="@color/colorHint" />
    <EditText
        android:id="@+id/r_userPasswordConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorWhite"
        android:hint="비밀번호를 다시 한번 입력 해주세요"
        android:inputType="textPassword"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColorHint="@color/colorHint" />
    <TextView
        android:id="@+id/r_passwordCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="비밀번호 확인"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp" />
    <EditText
        android:id="@+id/r_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorWhite"
        android:hint="이름을 입력해 주세요"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColorHint="@color/colorHint" />
    <EditText
        android:id="@+id/r_userNickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorWhite"
        android:hint="별명을 입력해 주세요"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColorHint="@color/colorHint" />


    <Button
        android:id="@+id/r_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:text="가입하기"
        android:textColor="@color/colorWhite"
        android:background="@drawable/login_button"
        />


</LinearLayout>
